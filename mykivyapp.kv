<MyLayout>:

    txt_input: my_input
    btn: my_btn
    img: my_image
    lbl: my_lbl
    kq: my_lbl_kq

    BoxLayout:
        orientation: 'vertical'
        
        Label:
            id:my_lbl
            text:'Hướng dẫn\n\nBước 1. Nhập url của ảnh cần dự đoán\n\nBước 2. Ấn nút để dự đoán ảnh'
            font_style: 'h2'
        
        TextInput:
            id: my_input
            text:'Nhập url'
        
        AsyncImage:
            id: my_image 
            source: 'https://images.unsplash.com/photo-1559028012-481c04fa702d?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8d2ViJTIwZGVzaWdufGVufDB8fDB8fA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60'    

        Button:
            id: my_btn
            text:'Dự đoán'
            color: [255/255, 128/255, 0,1]
            on_press: root.predict()   
            font_style: 'h1'     

        Label:
            id:my_lbl_kq
            color: [0, 191/255, 255/255,1]
            text:'...'
            font_style: 'h1'